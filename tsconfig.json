{
  "compilerOptions": {
    "strict": true,
    "module": "commonjs",
    "target": "ES2019",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "declaration": true,
    "declarationDir": "types"
  },
  "include": [ "src/**/*" ],
  "exclude": [
    "node_modules",
    "example",
    "types"
  ]
}
